{
  "name": "promptsmith-ts",
  "author": "Valentín Galfré <galfre.vn@gmail.com>",
  "description": "Type-safe system prompt builder for AI agents with fluent API",
  "version": "0.2.2",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./builder": {
      "types": "./dist/builder.d.ts",
      "import": "./dist/builder.js",
      "default": "./dist/builder.js"
    },
    "./tester": {
      "types": "./dist/tester.d.ts",
      "import": "./dist/tester.js",
      "default": "./dist/tester.js"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "import": "./dist/templates/index.js",
      "default": "./dist/templates/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun scripts/build.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "types": "tsc --noEmit"
  },
  "peerDependencies": {
    "zod": "latest",
    "ai": "latest"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/galfrevn/promptsmith.git",
    "directory": "apps/core"
  },
  "homepage": "https://github.com/galfrevn/promptsmith#readme",
  "bugs": {
    "url": "https://github.com/galfrevn/promptsmith/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
